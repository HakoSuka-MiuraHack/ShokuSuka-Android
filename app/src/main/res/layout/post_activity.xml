<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.shokusuka.miurahack.com.shokusuka.MainActivity">

<!--タイトルバー-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/PostCancel"
            android:textColor="@color/colorPrimary"
            android:background="@null"
            android:layout_width="100dp"
            android:text="cancel"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="近況アップデート"
            android:textAlignment="center" />
        <Button
            android:background="@null"
            android:id="@+id/PostButton"
            android:layout_width="100dp"
            android:text="投稿"
            android:layout_height="wrap_content" />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#000000"></LinearLayout>

    <!--ヘッダー-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="75dp"
            android:text="75dp"
            android:src="@drawable/usersample"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:text="名前"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="ひとこと"
                android:id="@+id/comment"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <!--入力顔面-->
    <EditText
        android:id="@+id/MainTextBody"
        android:layout_width="363dp"
        android:layout_gravity="center"
        android:layout_height="100dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/PreviewImgae1"
            android:layout_width="70dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:visibility="invisible"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/PreviewImgae2"
            android:layout_marginLeft="25dp"
            android:layout_width="70dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:visibility="invisible"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/PreviewImgae3"
            android:layout_marginLeft="25dp"
            android:layout_width="70dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:visibility="invisible"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>
    <!--<ScrollView-->
        <!--android:id="@+id/PostMainText"-->
        <!--android:layout_height="200dp"-->
        <!--android:layout_width="match_parent"-->
        <!--&gt;-->
            <!--<LinearLayout-->
                <!--android:id="@+id/MainTextImages"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:orientation="vertical"-->
                <!--/>-->
        <!--</ScrollView>-->

    <!--<画像プレビュー>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            >
            <ImageButton
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/camera"
                android:background="@null"
                android:id="@+id/SanpButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/ImageLibrary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lirary" />
        </LinearLayout>
</LinearLayout>
